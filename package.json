{
  "private": true,
  "version": "0.0.0-development",
  "description": "Vue 3 rich text editor",
  "homepage": "https://babu-ch.github.io/vue-quill/",
  "bugs": "https://github.com/babu-ch/vue-quill/issues",
  "license": "MIT",
  "author": "Ahmad Luthfi Masruri",
  "funding": [
    {
      "type": "individual",
      "url": "https://www.buymeacoffee.com/luthfimasruri"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/babu-ch/vue-quill"
  },
  "types": "test-dts/index.d.ts",
  "tsd": {
    "directory": "test-dts"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "ts-node scripts/verifyCommit.ts"
  },
  "lint-staged": {
    "*.js": [
      "oxfmt --write"
    ],
    "*.ts?(x)": [
      "eslint",
      "oxfmt --write"
    ]
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "dev": "npx ts-node scripts/dev.ts",
    "build": "npx ts-node scripts/build.ts",
    "build:all": "npm run build -- vue-quill-next --types --assets",
    "size": "npx ts-node scripts/build.ts vue-quill size-check -p -f global --assets",
    "lint": "eslint --ext .ts packages/*/src/**/*.ts",
    "format": "oxfmt --write \"packages/**/*.ts?(x)\"",
    "release": "npx ts-node scripts/release.ts",
    "assets:dev": "npm run assets:build && npx ts-node scripts/devAssets.ts",
    "assets:build": "npx ts-node scripts/buildAssets.ts",
    "docs:dev": "cd docs && npm run dev",
    "docs:build": "cd docs && npm run build",
    "docs:serve": "cd docs && npm run serve",
    "demo:dev": "cd demo && npm run dev",
    "demo:build": "cd demo && npm run build",
    "demo:serve": "cd demo && npm run serve",
    "test": "vitest"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.28.4",
    "@rolldown/plugin-node-polyfills": "^1.0.3",
    "@rushstack/eslint-patch": "^1.14.1",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^28.1.8",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "brotli": "^1.3.3",
    "chalk": "^4.1.2",
    "csso": "^5.0.5",
    "dotenv": "^16.0.3",
    "eslint": "^9.38.0",
    "eslint-plugin": "^1.0.1",
    "eslint-plugin-vue": "^10.5.1",
    "execa": "^5.1.1",
    "fs-extra": "^10.1.0",
    "happy-dom": "^20.4.0",
    "lint-staged": "^12.5.0",
    "minimist": "^1.2.7",
    "npm-run-all": "^4.1.5",
    "oxfmt": "^0.28.0",
    "rolldown": "^1.0.0-rc.3",
    "rolldown-plugin-dts": "^0.22.1",
    "semantic-release": "^19.0.5",
    "stylus": "^0.59.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.18",
    "vue": "^3.2.45",
    "vue-tsc": "^3.1.2",
    "yorkie": "^2.0.0",
    "zlib": "^1.0.5"
  }
}
